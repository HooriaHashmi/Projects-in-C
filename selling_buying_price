#include <stdio.h>

int main() {
    float total_selling_price, total_profit, cost_price_per_item;

    // Input total selling price and total profit
    printf("Enter total selling price of 15 items: ");
    scanf("%f", &total_selling_price);

    printf("Enter total profit earned on 15 items: ");
    scanf("%f", &total_profit);

    // Calculate cost price per item
    cost_price_per_item = (total_selling_price - total_profit) / 15.0;

    // Display the calculated cost price per item
    printf("Cost price per item = %.2f\n", cost_price_per_item);

    return 0;
}
